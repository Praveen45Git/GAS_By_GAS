{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist/node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "server/**/*.ts"  // Path to your server-related code (e.g., image upload logic)
  ],
  "exclude": [
    "node_modules"
  ]
}
